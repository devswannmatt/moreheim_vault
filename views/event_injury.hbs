<form id="create-event-form" data-method="POST" data-redirect="close" action="/events/create">
    <div class="row">
        <div class="col s4">
            <div class="input-field">
                <select id="type" name="type" required>
                    {{#each eventTypes}}
                    <option value="{{this.value}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
                    {{/each}}
                </select>
                <label for="type">Event Type</label>
            </div>
        </div>
        <div class="col s4">
            <div class="input-field">
                <select id="entity" name="entity" required>
                    <option value="{{member._id}}/Member" selected>{{member.name}} (Member)</option>
                </select>
                <label for="entity">Entity</label>
            </div>
        </div>
        <div class="col s4">
            <div class="input-field">
                <select id="injury" name="injury" required>
                    {{#each injuries}}
                    <option value="{{add @index 1}}" {{#if this.selected}}selected{{/if}}>{{this.label}}</option>
                    {{/each}}
                </select>
                <label for="injury">Injury</label>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col s12">
            <div class="input-field">
                <input id="description" name="description" type="text">
                <label for="description">Notes</label>
            </div>
        </div>
    </div>
    <button class="btn waves-effect waves-light" type="submit">Create Event</button>
    <a href="#!" class="btn waves-effect waves-light red" type="button" onclick="closeModal(); return false;">Cancel</a>
</form>