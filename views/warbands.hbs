<div class="section">
<h3>Warbands</h3>

<div class="row">
    <div class="col-8 col-md-8">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Warbands</span>
                <p>Manage warbands in your campaigns.</p>
            </div>
        </div>
    </div>
    <div class="col-4 col-md-4">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Create Warband</span>
            </div>
        </div>
    </div>
</div>

<table class="striped responsive-table" id="items-table">
    <thead>
    <tr>
        <th>Name</th>
        <th>Created</th>
    </tr>
    </thead>
    <tbody>
    {{#each warbands}}
        <tr>
            <td><a href="/warbands/warband/{{this._id}}">{{this.name}}</a></td>
            <td>{{formatDateTime this.createdAt}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
</div>

<script src="/js/players.js"></script>
