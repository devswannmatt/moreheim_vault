<div class="section">
<h3>Members</h3>

<div class="row">
    <div class="col-8 col-md-8">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Members</span>
                <p>Manage members in your campaigns.</p>
            </div>
        </div>
    </div>
    <div class="col-4 col-md-4">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Create Member</span>
                <form id="create-member-form" method="POST" action="/members/create">
                    <div class="input-field">
                        <input id="name" name="name" type="text" required>
                        <label for="name">Name</label>
                    </div>
                    <div class="input-field">
                        <select id="warband" name="warband" required>
                            <option value="" disabled selected>Choose warband</option>
                            {{#each warbands}}
                                <option value="{{this._id}}">{{this.name}}</option>
                            {{/each}}
                        </select>
                        <label for="warband">Warband</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit">Create Member</button>
                </form>
            </div>
        </div>
    </div>
</div>

<table class="striped responsive-table" id="items-table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Warband</th>
        <th>Created</th>
    </tr>
    </thead>
    <tbody>
    {{#each warbands}}
        <tr>
            <td><a href="/warbands/warband/{{this._id}}">{{this._id}}</a></td>
            <td>{{#if this.warband}}{{this.warband.name}}{{else}}(no warband){{/if}} (<a href="/warbands/warband/{{this.warband._id}}">{{this.warband._id}}</a>)</td>
            <td>{{this.createdAt}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
</div>
