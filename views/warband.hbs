<div class="row">
    <div class="col s12 m12">
        <div class="card">
            <form id="warband-name-form" data-method="PATCH" action="/warbands/warband/{{warband._id}}">
                <div class="card-content">
                    <div class="row">
                        <div class="col s3">
                            <div
                                style="width:100%; height:140px; display:flex; align-items:center; justify-content:center; background:#e3f2fd;">
                                <i class="ra ra-double-team" style="font-size:28px; color:#1565c0"></i>
                            </div>
                            <div style="margin-top:8px; text-align:center">
                                <div class="grey-text text-darken-1">{{warband.roster.name}}</div>
                            </div>
                        </div>
                        <div class="col s9">
                            <div style="flex-grow:1">
                                <span class="card-title" style="margin:0">
                                    <div class="input-field">
                                        <input id="name" name="name" type="text" value="{{warband.name}}" required>
                                        <label for="name" class="active">Name</label>
                                    </div>
                                </span>
                                <div class="row">
                                    <div class="col s12">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row" style="margin-bottom:0">
                        <div class="col s12">
                            <div class="input-field">
                            </div>
                        </div>
                        <div class="col s12">
                            <div class="input-field">
                                <textarea id="description" name="description" class="materialize-textarea" rows="2"
                                    style="min-height:48px">{{warband.description}}</textarea>
                                <label for="description" class="active">Description</label>
                            </div>
                        </div>
                        <div class="col s6">
                            <div class="input-field">
                                <input id="rating" name="rating" type="number" value="{{warband.rating}}" required>
                                <label for="rating" class="active">
                                    <i class="ra ra-podium"></i> Rating
                                </label>
                            </div>
                        </div>
                        <div class="col s6">
                            <div class="input-field">
                                <input id="gold" name="gold" type="number" value="{{warband.gold}}" required>
                                <label for="gold" class="active">
                                    <i class="ra ra-gold-bar"></i> Gold
                                </label>
                            </div>
                        </div>
                    </div>
                    <span class="grey-text text-darken-1" style="margin-right:12px">
                        Last updated:
                        {{formatDateTime unit.updatedAt}}
                    </span>
                </div>
                <div class="card-action blue lighten-5">
                    <div class="row" style="margin-bottom:0">
                        <div class="col s6">
                            <a class="btn-small blue" href="/units/unit/{{unit._id}}/inventory">Inventory</a>
                        </div>
                        <div class="col s6 right-align">
                            <div class="btn-area">
                                <button id="delete-unit-btn" type="button" class="btn waves-effect waves-light red"
                                    title="Delete unit">
                                    <i class="ra ra-tombstone"></i>
                                </button>
                                <button class="btn waves-effect waves-light" type="submit">
                                    <i class="ra ra-save"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <div class="card">
            <div class="card-content">
                <span class="card-title">Units</span>
                <table class="striped responsive-table" id="units-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>#</th>
                            <th>M</th>
                            <th>WS</th>
                            <th>BS</th>
                            <th>S</th>
                            <th>T</th>
                            <th>W</th>
                            <th>I</th>
                            <th>A</th>
                            <th>LD</th>
                            <th>Rating</th>
                            <th>Gold</th>
                        </tr>
                    </thead>
                    <tbody>
                    {{#each units}}
                        <tr>
                            <td><a href="/units/unit/{{this._id}}">{{this.name}}</a></td>
                            <td>{{this.qty}}</td>
                            <td>{{this.m}}</td>
                            <td>{{this.ws}}</td>
                            <td>{{this.bs}}</td>
                            <td>{{this.s}}</td>
                            <td>{{this.t}}</td>
                            <td>{{this.w}}</td>
                            <td>{{this.i}}</td>
                            <td>{{this.a}}</td>
                            <td>{{this.ld}}</td>
                            <td>{{this.rating}}</td>
                            <td>{{this.gold}}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>