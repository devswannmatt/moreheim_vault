<div class="row">
    <div class="col s12 m12">
        <div class="card">
            <form id="member-inventory-form" data-method="PATCH" action="/members/member/{{member._id}}/inventory">
                <div class="card-content">
                    <div class="row">
                        <table class="striped responsive-table" id="items-table">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Gold</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-action blue lighten-5">
                    <div class="row" style="margin-bottom:0">
                        <div class="col s6">
                            <button id="add-item-btn" type="button" class="btn waves-effect waves-light" title="Add Item">
                                <i class="ra ra-sword"></i>
                                Add Item
                            </button>
                        </div>
                        <div class="col s6 right-align">
                            <div class="btn-area">
                                <button id="delete-member-btn" type="button" class="btn waves-effect waves-light red"
                                    title="Delete member">
                                    <i class="ra ra-tombstone"></i>
                                </button>
                                <button class="btn waves-effect waves-light" type="submit">
                                    <i class="ra ra-save"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    const EXISTING_LIST = {{#if inventory}}{{{json inventory}}}{{else}}[]{{/if}};
    const LOOKUP_LIST = {{{json items}}} || [];
</script>

<script src="/js/add-row.js"></script>