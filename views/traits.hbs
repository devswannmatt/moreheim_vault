<div class="section">
    <h3>Traits</h3>

    <div class="row">
        <div class="col-4 col-md-4">
            <div class="card">
                <div class="card-content">
                    <span class="card-title">Create Trait</span>
                    {{> trait_form method="POST" action="/traits/create" formId="create-trait-form"}}
                </div>
            </div>
        </div>
    </div>

    <table class="striped responsive-table" id="traits-table">
        <thead>
        <tr>
            <th>Name</th>
            <th>Type</th>
            <th>Description</th>
        </tr>
        </thead>
        <tbody>
        {{#each traits}}
            <tr>
                <td><a href="/traits/trait/{{this._id}}">{{this.name}}</a></td>
                <td>{{formatTraitType this.type}}</td>
                <td>{{this.description}}</td>
            </tr>
        {{/each}}
        </tbody>
    </table>
</div>
