<form id="{{formId}}" method="{{method}}" action="{{action}}">
    <div class="row">
        <div class="col s4">
            <div class="input-field">
                <select id="type" name="type" required>
                    <option value="1" {{#ifCond trait.type '==' '1'}}selected{{/ifCond}}>Combat</option>
                    <option value="2" {{#ifCond trait.type '==' '2'}}selected{{/ifCond}}>Shooting</option>
                    <option value="3" {{#ifCond trait.type '==' '3'}}selected{{/ifCond}}>Academic</option>
                    <option value="4" {{#ifCond trait.type '==' '4'}}selected{{/ifCond}}>Strength</option>
                    <option value="5" {{#ifCond trait.type '==' '5'}}selected{{/ifCond}}>Speed</option>
                </select>
                <label for="type" class="active">Type</label>
            </div>
        </div>
        <div class="col s8">
            <div class="input-field">
                <input id="name" name="name" type="text" value="{{trait.name}}" required>
                <label for="name" class="active">Name</label>
            </div>
        </div>
    </div>
    <div class="row">
        {{> field label="Description" name="description" type="text" col="s12" required=true}}
    </div>
    <button class="btn waves-effect waves-light" type="submit">Create Trait</button>
</form>