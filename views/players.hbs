<div class="section">
<h3>Players</h3>

<div class="row">
    <div class="col-8 col-md-8">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Players</span>
                <p>Manage players in your campaigns.</p>
            </div>
        </div>
    </div>
    <div class="col-4 col-md-4">
        <div class="card">
            <div class="card-content">
                <span class="card-title">Create Player</span>
                <form id="create-player-form" method="POST" action="/players/create">
                    <div class="input-field">
                        <input id="name" name="name" type="text" required>
                        <label for="name">Name</label>
                    </div>
                    <div class="input-field">
                        <input id="level" name="level" type="number" required>
                        <label for="level">Level</label>
                    </div>
                    <button class="btn waves-effect waves-light" type="submit">Create Player</button>
                </form>
            </div>
        </div>
    </div>
</div>

<table class="striped responsive-table" id="items-table">
    <thead>
    <tr>
        <th>ID</th>
        <th>Data</th>
        <th>Created</th>
    </tr>
    </thead>
    <tbody>
    {{#each players}}
        <tr>
            <td><a href="/players/player/{{this._id}}">{{this._id}}</a></td>
            <td>{{this}}</td>
            <td>{{this.createdAt}}</td>
        </tr>
    {{/each}}
    </tbody>
</table>
</div>

<script src="/js/players.js"></script>
